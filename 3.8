#include <iostream>
#include <limits> // Добавлено для использования std::numeric_limits

void leftTriangle(int x) {
    for (int i = 1; i <= x; ++i) {
        for (int j = 1; j <= i; ++j) {
            std::cout << "*"; // Выводим символы '*'
        }
        std::cout << std::endl; // Переход на новую строку
    }
}

int main() {
    int x;

    std::cout << "Введите высоту треугольника (положительное целое число): ";
    while (true) {
        std::cin >> x;
        if (std::cin.fail() || x <= 0) { // Проверка на ввод
            std::cin.clear(); // Сброс флага ошибки
            std::cin.ignore(std::numeric_limits<std::streamsize>::max(), '\n'); // Игнорируем некорректный ввод
            std::cout << "Ошибка ввода. Пожалуйста, введите положительное целое число: ";
        } else {
            break; // Выход из цикла, если ввод корректен
        }
    }

    leftTriangle(x); // Вызов функции для вывода треугольника
    return 0; // Завершение программы
}
